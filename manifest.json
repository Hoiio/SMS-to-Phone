{
	"name": "SMS to Phone",
	"version": "1.0.0",
	"manifest_version": 2,
	"description": "SMS to Phone enables you to send a website link to mobile phones.",
	"browser_action": {
		"default_icon": "img/icon.png",
		"default_popup": "popup.html"
	},
	"options_page": "options.html",
	"permissions": [
		"tabs", 
		"https://secure.hoiio.com/",
		"https://www.googleapis.com/"],
	"icons":{
		"16": "img/icon16.png",
		"48": "img/icon48.png",
        "128": "img/icon128.png"
    }
}